    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CMake Executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/exercise01/harmonic",
            "args": ["10"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "osx": {
                "MIMode": "lldb"
            },
            "sourceFileMap": {
                "/mnt/c": "C:\\"
            }
        }
    ]
}